%li.mm-profile-form__item
  = f.label :role, class: "profile-edit-form-label #{master_cabinet? ? 'profile-form-label--sm' : ''}"
  .profile-form__item-input-wrap
    .input-medium-size.profile-form__input-wrap
      - if master_cabinet?
        = user.additional_position
      - else
        = f.select :additional_position, ['none'] + User.role_positions, {}, {class: 'profile-form__select'}
