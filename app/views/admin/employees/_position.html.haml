%li.mm-profile-form__item
  = f.label :position, class: "profile-edit-form-label profile-edit-form-label--mandatory #{master_cabinet? ? 'profile-form-label--sm' : ''}"
  .profile-form__item-input-wrap
    .input-medium-size.profile-form__input-wrap
      - if master_cabinet?
        = user.position
      - else
        = f.select :position, ['none'] + community_positions(f.object.community), {}, {class: 'profile-form__select', disabled: f.object.community.in?(['none', nil])}
        %p#position-error-text.position-error__text required field
