%li.mm-profile-form__item
  = f.label :english_level, class: "profile-edit-form-label profile-edit-form-label--mandatory #{master_cabinet? ? 'profile-form-label--sm' : ''}"
  .profile-form__item-input-wrap{class: @user.new_record? ? 'mm-no-border' : nil}
    .input-medium-size.profile-form__input-wrap
      - if master_cabinet?
        = user.english_level
      - else
        = f.select :english_level, User::ENGLISH_LEVELS, {}, {class: 'profile-form__select'}
      %p#english-level-error-text.english-level-error__text no english level
